<Window x:Class="WindowsKeyBlocker.InputPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsKeyBlocker"
        mc:Ignorable="d"
        Title="InputPopUp" Height="117" Width="256" ResizeMode="NoResize">
    <Grid>
        <Label Content="Enter a value:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <TextBox Margin="10,26,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="235" Height="20" Name="Input"/>
        <Button Content="Done" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top" Width="116" Click="DoneButton_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Right" Margin="0,51,10,0" VerticalAlignment="Top" Width="115" Click="CancelButton_Click"/>
    </Grid>
</Window>
